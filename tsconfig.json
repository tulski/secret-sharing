{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "noLib": false,
    "outDir": "./dist",
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6"
  },
  "lib": [
  "dom",
  "es2017",
  "es2019"
  ],
  "include": [
  "src/**/*"
  ],
  "exclude": [
  "node_modules",
  "**/*.spec.ts"
  ]
}

